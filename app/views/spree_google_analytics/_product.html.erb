<% if store_integration('google_analytics').present? %>
  <script>
    <% if use_gtm? %>
      if (window.dataLayer) {
        dataLayer.push(<%= google_analytics_view_item_json %>);
      }
    <% else %>
      if (window.gtag) {
        gtag('event', 'view_item', <%= google_analytics_view_item_json %>);
      }
    <% end %>
  </script>
<% end %>
